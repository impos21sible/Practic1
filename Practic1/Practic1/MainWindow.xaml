<Window x:Class="Practic1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practic1"
        mc:Ignorable="d"
        Title="MainWindow" Background="Gray" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Grid.ColumnDefinitions>

            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Canvas Grid.Column="0" Grid.Row="0" Background="SpringGreen">
        </Canvas>
        <Canvas Grid.Column="1" Grid.Row="0" Background="MediumSeaGreen">
        </Canvas>
        <Canvas Grid.Column="0" Grid.Row="1" Background="SeaGreen">
        </Canvas>
        <Canvas Grid.Column="1" Grid.Row="1" Background="LightGreen  ">


        </Canvas>


        <StackPanel>

            <!-- Задание 1 -->


            <Label Content="Задание 1" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
            <Label FontSize="15" Content="Введите длину ребра куба:" />
            <TextBox x:Name="textBox" FontSize="15" Height="35" VerticalAlignment="Center" TextWrapping="Wrap" Margin="4"  HorizontalAlignment="Left" Width="185"/>


        </StackPanel>


        <Button Content="Посчитать" Margin="50,110,260,65" Click="Button_Click"/>

        <!-- Задание 2 -->

        <Label Content="Задание 2" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="0,5,0,0" Grid.Row="1"/>
        <Label FontSize="15" Content="A " Margin="5,25,250,150" Grid.Row="1" />
        <TextBox x:Name="textBoxA" FontSize="15" Height="25"  TextWrapping="Wrap" Margin="50,35,0,150"  HorizontalAlignment="Left" Width="185" Grid.Row="1"/>
        <Label FontSize="15" Content="B " Margin="5,65,300,100" Grid.Row="1" />
        <Label FontSize="15" Content="C " Margin="5,110,300,55" Grid.Row="1" />

        <Label FontSize="18" Content="Объем куба:" HorizontalAlignment="Left" Margin="192,29,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="ObiemTextBox"  Height="23" Margin="310,40,0,0"  VerticalAlignment="Top" Width="65" />

        <Label FontSize="18" Content="Площадь :"  Margin="190,70,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="PlochadTextBox" Height="23" Margin="310,80,0,0"  VerticalAlignment="Top" Width="65" />
        <TextBox x:Name="textBoxB" FontSize="15" Height="25" VerticalAlignment="Center"  Margin="50,70,0,115"  HorizontalAlignment="Left" Width="185" Grid.Row="1"/>
        <TextBox x:Name="textBoxC" FontSize="15" Height="25" VerticalAlignment="Center"  Margin="50,115,0,70"  HorizontalAlignment="Left" Width="185" Grid.Row="1"/>
        <Button Content="Посчитать" Grid.Row="1" Margin="50,155,260,20" Click="Button_Click_1"/>
        <Label FontSize="15" Content="AC " Margin="245,35,10,139.5" Grid.Row="1" />
        <Label FontSize="15" Content="" Margin="245,65,10,108.5" Grid.Row="1" />
        <TextBox x:Name="ACTextBox"  Height="23" Margin="320,35,10,0"  VerticalAlignment="Top" Width="65" Grid.Row="1" />
        <Label FontSize="15" Content="BC" Margin="245,74,10,99.5" Grid.Row="1" />
        <TextBox x:Name="BCTextBox"  Height="24" Margin="320,80,10,0"  VerticalAlignment="Top" Width="65" Grid.Row="1" />
        <Label FontSize="15" Content="AC*BC" Margin="245,110,10,63" Grid.Row="1" />
        <TextBox x:Name="ACBCTextBox"  Height="24" Margin="320,115,10,0"  VerticalAlignment="Top" Width="65" Grid.Row="1"  />


        <!-- Задание 3 -->

        <Label Content="Задание 3" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        <Label  Content="V лодки" Grid.Column="1" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top"/>
        <Label  Content="V реки;" Grid.Column="1" HorizontalAlignment="Left" Margin="10,75    ,0,0" VerticalAlignment="Top"/>
        <Label  Content="T1 ч " Grid.Column="1" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top"/>
        <Label  Content="T2 ч" Grid.Column="1" HorizontalAlignment="Left" Margin="13,145,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="VtextBox"  Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="89,40,0,0"  Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="t1textBox" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="89,120,0,0"  Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="t2textBox" Grid.Column="1" HorizontalAlignment="Left" Margin="89,150,0,36"  Text="" Width="120"/>
        <TextBox x:Name="VrtextBox"  Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="89,80,0,0"  Text="" VerticalAlignment="Top" Width="120"/>


        <Button Content="Посчитать" Margin="100,180,210,210" Click="Button_Click_2" Grid.Column="1" Grid.RowSpan="2"/>

        <Label  Content="S путь" Grid.Column="1" HorizontalAlignment="Left" Margin="235,30,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="OtverTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="20" Margin="290,35,0,0"  
                 Text="" VerticalAlignment="Top" Width="95" />

        <!-- Задание 4 -->
        <Label Content="Задание 4" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,10,10" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Content="X = " Grid.Column="1" HorizontalAlignment="Left" Margin="10,40,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBox x:Name="xTextBox"   Grid.Column="1" HorizontalAlignment="Left" Margin="42,40,0,145"  Text="" Width="120" Grid.Row="1"/>
        <Label Content="a = " Grid.Column="1" HorizontalAlignment="Left" Margin="10,75,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBox  x:Name="aTextBox" Grid.Column="1" HorizontalAlignment="Left" Margin="40,80,0,105"  Text="" Width="120" Grid.Row="1"/>
        <Button Content="Посчитать" Margin="61,110,249,71" Click="Button_Click_3" Grid.Column="1" Grid.Row="1"/>

        <Label Content="α = " Grid.Column="1" HorizontalAlignment="Left" Margin="220,40,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBox x:Name="alfaTextBox"  Grid.Column="1" HorizontalAlignment="Left" Margin="250,40,0,145"  Text="" Width="120" Grid.Row="1"/>

        <Button x:Name="BtnDopTask" Content="Доп Задания" Width="200" Margin="10" VerticalAlignment="Bottom" Height="30" Grid.Row="1" Grid.Column="2" Click="BtnDopTask_Click" />



        <Frame x:Name="MainFrame"  NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
